<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToknResumeBuilder" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="fontFamily">@font/inter</item>
        <item name="actionMenuTextAppearance">@style/MyMenuTextAppearance</item>


    <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="MyMenuTextAppearance" parent="android:TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="Theme.MaterialComponents.Light">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
        <item name="android:textColor">#2D3748</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.ToknResumeBuilder.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Theme.ToknResumeBuilder.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:elevation">0dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme.ToknResumeBuilder.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spinner_border</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>

    <style name="RatingBar" parent="Theme.ToknResumeBuilder">
        <item name="colorControlActivated">#FFD700</item>
        <item name="colorControlNormal">#FFD700</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/color_primary</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>