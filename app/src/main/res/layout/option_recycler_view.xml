<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvRvRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:text="@string/remove"
        android:textColor="#4F5765"
        android:textSize="12sp"
        app:drawableStartCompat="@drawable/ic_trash_option"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintTop_toTopOf="parent" />

<!--    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:alpha="0.1"
        android:background="#9A9595"
        app:layout_constraintBottom_toTopOf="@+id/tvRvRearrange"
        app:layout_constraintStart_toStartOf="parent" />-->

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/tvRvRearrange"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvRvRearrange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:drawablePadding="5dp"
        android:text="@string/rearrange"
        android:textColor="#4F5765"
        android:textSize="12sp"
        app:drawableStartCompat="@drawable/ic_rearrange_option"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRvRemove" />
</androidx.constraintlayout.widget.ConstraintLayout>