<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/tvGDrive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_bg"
        android:drawablePadding="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Sync with google drive /other drives"
        android:textColor="#18191A"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/ic_baseline_sync_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_bg"
        android:drawablePadding="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Feedback"
        android:textColor="#18191A"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/ic_baseline_message_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvGDrive"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvShareApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_bg"
        android:drawablePadding="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Share app"
        android:textColor="#18191A"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/ic_baseline_share_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFeedback"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvRateApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_bg"
        android:drawablePadding="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Rate app"
        android:textColor="#18191A"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/ic_baseline_star_outline_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvShareApp"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
